pipeline
{
	agent any
	stages
	{
		stage('Git Checkout')
		  {
			steps
			  {
				git branch: 'oumayma', url: 'https://github.com/oumaymajr/SpringAOP.git'
		      }
	       }
	    stage('UNIT Testing')
		  {
			steps
			  {
			  sh 'mvn test'
			  }
	       
		  }

        stage('Integration Testing')
		  {
			steps
			  {
			  sh 'mvn verify -DskiUnitTests'
			  }
	       
		  }
		stage('Maven Build')
		  {
			steps
			  {
			  sh 'mvn clean install'
			  }
	       
		  }

}

}




		 